@using QuanLyRungPhongHo.Models
@model IEnumerable<NhanSuViewModel>

@{
    ViewBag.Title = "Quản lý Nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-3">
    <h3 class="text-success fw-bold mb-4"><i class="bi bi-people-fill"></i> Quản lý Nhân sự</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <!-- Form không submit, chỉ nhập dữ liệu -->
            <div id="nhansuSearchForm" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <input type="text" id="nhansuSearchInput" name="searchString" class="form-control"
                        placeholder="Tìm theo tên hoặc SĐT..." value="">
                </div>
                <div class="col-md-3">
                    <select id="nhansuXaFilter" name="maXaFilter" class="form-select">
                        <option value="">--- Tất cả địa bàn ---</option>
                        @foreach (var xa in (SelectList)ViewBag.DsXa)
                        {
                            <option value="@xa.Value">@xa.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="nhansuRoleFilter" name="roleFilter" class="form-select">
                        <option value="">-- Tất cả chức vụ --</option>
                        <option value="Trạm trưởng">Trạm trưởng</option>
                        <option value="Kiểm lâm viên">Kiểm lâm viên</option>
                        <option value="Bảo vệ rừng">Bảo vệ rừng</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-success w-100" onclick="openModal()" style="height: 38px;">
                        Thêm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê kết quả tìm kiếm -->
    <div class="mb-3">
        <span class="badge bg-info text-dark" id="nhansuTotal">
            Tổng số: @Model.Count() nhân sự
        </span>
        <span class="badge bg-primary" id="nhansuSearchStatus" style="display: none;"></span>
    </div>

    <!-- Bảng Desktop -->
    <div class="table-responsive d-none d-md-block bg-white shadow-sm rounded">
        <table class="table table-hover align-middle mb-0" id="nhansuTable">
            <thead class="bg-success text-white">
                <tr>
                    <th>Họ tên</th>
                    <th>Chức vụ</th>
                    <th>Liên hệ</th>
                    <th>Địa bàn</th>
                    <th>Tài khoản (Quyền)</th>
                    <th class="text-center">Tác vụ</th>
                </tr>
            </thead>
            <tbody id="nhansuTableBody">
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.HoTen</div>
                            </td>
                            <td><span class="badge bg-primary">@item.ChucVu</span></td>
                            <td>
                                <div><small class="text-muted"><i class="bi bi-telephone"></i> @item.SDT</small></div>
                                @if (!string.IsNullOrEmpty(item.Email))
                                {
                                    <div><small class="text-muted"><i class="bi bi-envelope"></i> @item.Email</small></div>
                                }
                            </td>
                            <td>@item.TenXa</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.TenDangNhap))
                                {
                                    <span>@item.TenDangNhap</span>
                                    <span class="text-muted">(@item.Quyen)</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-exclamation-circle"></i> Chưa có TK</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary" onclick="editData(@item.MaNV, event)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteData(@item.MaNV)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-3">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile View -->
    <div class="d-md-none" id="nhansuMobileView">
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm border-start border-4 border-success" data-nhansu-id="@item.MaNV">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="fw-bold text-success mb-0">@item.HoTen</h6>
                        <span class="badge bg-primary">@item.ChucVu</span>
                    </div>
                    <p class="mb-1 small"><i class="bi bi-geo-alt"></i> @item.TenXa</p>
                    <p class="mb-1 small"><i class="bi bi-telephone"></i> @item.SDT</p>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <p class="mb-1 small"><i class="bi bi-envelope"></i> @item.Email</p>
                    }
                    <p class="mb-2 small"><i class="bi bi-person"></i> TK: @item.TenDangNhap</p>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary btn-sm flex-fill"
                            onclick="editData(@item.MaNV, event)">Sửa</button>
                        <button class="btn btn-outline-danger btn-sm flex-fill"
                            onclick="deleteData(@item.MaNV)">Xóa</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="nhanSuModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-gradient"
                style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                <h5 class="modal-title text-white fw-bold" id="modalTitle">
                    <i class="bi bi-person-plus-fill me-2"></i>Thêm Nhân sự
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4" style="max-height: 70vh; overflow-y: auto;">
                <form id="frmNhanSu" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="MaNV" name="MaNV" value="0">

                    <!-- Thông tin cá nhân -->
                    <div class="mb-4">
                        <h6 class="text-success fw-bold mb-3 pb-2 border-bottom border-success">
                            <i class="bi bi-person-circle me-2"></i>Thông tin cá nhân
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Họ tên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" name="HoTen" id="HoTen"
                                    required>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Chức vụ <span class="text-danger">*</span></label>
                                <select class="form-select form-select-sm" name="ChucVu" id="ChucVu" required>
                                    <option value="">-- Chọn --</option>
                                    <option value="Kiểm lâm">Kiểm lâm</option>
                                    <option value="Phó Kiểm lâm">Phó Kiểm lâm</option>
                                    <option value="Trưởng trạm">Trưởng trạm</option>
                                    <option value="Phó trạm">Phó trạm</option>
                                    <option value="Nhân viên bảo vệ rừng">Nhân viên bảo vệ rừng</option>
                                    <option value="Cán bộ kỹ thuật">Cán bộ kỹ thuật</option>
                                    <option value="Hướng dẫn viên">Hướng dẫn viên</option>
                                </select>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Số điện thoại <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" name="SDT" id="SDT"
                                    pattern="^(03|05|07|08|09|01[2|6|8|9])+([0-9]{8})$" required>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control form-control-sm" name="Email" id="Email"
                                    placeholder="email@example.com" required>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                        </div>
                        <div class="row g-3 mt-1">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Địa bàn quản lý <span
                                        class="text-danger">*</span></label>
                                @Html.DropDownList("MaXa", (SelectList)ViewBag.DsXa, "-- Chọn địa bàn --",
                                new { @class = "form-select form-select-sm", @id = "MaXa", required = "required" })
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin tài khoản -->
                    <div class="mb-3">
                        <h6 class="text-success fw-bold mb-3 pb-2 border-bottom border-success">
                            <i class="bi bi-shield-lock-fill me-2"></i>Thông tin tài khoản
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tên đăng nhập <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" name="TenDangNhap"
                                    id="TenDangNhap" pattern="^[a-zA-Z0-9_]{5,50}$" required>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Quyền <span class="text-danger">*</span></label>
                                <select class="form-select form-select-sm" name="Quyen" id="Quyen" required>
                                    <option value="Kiem_Lam">Kiểm lâm</option>
                                    <option value="QuanLy_Xa">Quản lý Xã</option>
                                    <option value="Admin_Tinh">Admin Tỉnh</option>
                                </select>
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                            </div>
                        </div>
                        <div class="row g-3 mt-1">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">
                                    Mật khẩu <span class="text-danger" id="passRequired">*</span>
                                </label>
                                <input type="password" class="form-control form-control-sm" name="MatKhau" id="MatKhau"
                                    minlength="6" placeholder="Tối thiểu 6 ký tự">
                                <div class="invalid-feedback"></div>
                                <div class="valid-feedback"></div>
                                <small class="text-muted" id="passNote" style="display:none;">
                                    <i class="bi bi-info-circle"></i> Để trống nếu không đổi
                                </small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Đóng
                </button>
                <button type="button" class="btn btn-success shadow-sm" onclick="saveData()" id="btnSave">
                    <i class="bi bi-check-circle me-1"></i>Lưu dữ liệu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/nhansu-validator.js" asp-append-version="true"></script>
    <script src="~/js/nhansu.js" asp-append-version="true"></script>
}
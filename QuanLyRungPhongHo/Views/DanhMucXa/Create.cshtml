@model QuanLyRungPhongHo.Models.DanhMucXa
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-page">
    <div class="digioi-card">

        <div class="digioi-card-header">
            <i class="bi bi-plus-circle"></i> @Localizer["PageHeader"]
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" class="digioi-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Mã xã -->
                <div class="mb-3">
                    <label asp-for="MaXa">
                        <i class="bi bi-tag"></i> @Localizer["MaXa"] <span class="text-danger">@Localizer["Required"]</span>
                    </label>
                    <input asp-for="MaXa"
                           class="form-control"
                           placeholder="@Localizer["MaXaPlaceholder"]"
                           maxlength="10" />
                    <span asp-validation-for="MaXa" class="text-danger"></span>
                    <div class="form-text">@Localizer["MaXaHelp"]</div>
                </div>

                <!-- Tên xã -->
                <div class="mb-4">
                    <label asp-for="TenXa">
                        <i class="bi bi-building"></i> @Localizer["TenXa"] <span class="text-danger">@Localizer["Required"]</span>
                    </label>
                    <input asp-for="TenXa"
                           class="form-control"
                           placeholder="@Localizer["TenXaPlaceholder"]"
                           maxlength="100" />
                    <span asp-validation-for="TenXa" class="text-danger"></span>
                    <div class="form-text">@Localizer["TenXaHelp"]</div>
                </div>

                <!-- Nút -->
                <div class="digioi-actions">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> @Localizer["Save"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="text-decoration-none">
            <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

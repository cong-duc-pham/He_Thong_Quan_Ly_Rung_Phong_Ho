@model IEnumerable<QuanLyRungPhongHo.Models.NgayNghiLe>

@{
    ViewBag.Title = "Quản lý Ngày nghỉ lễ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-3 ngaynghile-container">
    <div class="row mb-3">
        <div class="col">
            <h3 class="ngaynghile-title fw-bold">
                <i class="bi bi-calendar-event"></i> Quản lý Ngày nghỉ lễ
            </h3>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Thêm ngày nghỉ lễ
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm ngaynghile-card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle ngaynghile-table">
                        <thead class="ngaynghile-table-header">
                            <tr>
                                <th>Tên ngày nghỉ</th>
                                <th>Từ ngày</th>
                                <th>Đến ngày</th>
                                <th>Số ngày</th>
                                <th>Loại</th>
                                <th>Ghi chú</th>
                                <th style="width: 150px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var soNgay = (item.NgayKetThuc - item.NgayBatDau).Days + 1;
                                var isUpcoming = item.NgayBatDau > DateTime.Today;
                                var isOngoing = item.NgayBatDau <= DateTime.Today && item.NgayKetThuc >= DateTime.Today;
                                var isPast = item.NgayKetThuc < DateTime.Today;

                                <tr class="@(isOngoing ? "ngaynghile-row-ongoing" : (isUpcoming ? "" : "ngaynghile-row-past"))">
                                    <td>
                                        <strong>@item.TenNgayNghi</strong>
                                        @if (isOngoing)
                                        {
                                            <span class="badge badge-ongoing ms-2">Đang diễn ra</span>
                                        }
                                        else if (isUpcoming)
                                        {
                                            <span class="badge badge-upcoming ms-2">Sắp tới</span>
                                        }
                                    </td>
                                    <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                                    <td>@soNgay ngày</td>
                                    <td>@item.LoaiNgayNghi</td>
                                    <td>@(item.GhiChu ?? "-")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.MaNgayNghi" class="btn btn-xs btn-warning" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.MaNgayNghi" method="post" style="display: inline;" class="delete-form" data-ten="@item.TenNgayNghi">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-xs btn-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 ngaynghile-empty">
                    <i class="bi bi-calendar-x ngaynghile-empty-icon"></i>
                    <p class="mt-3">Chưa có ngày nghỉ lễ nào</p>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Thêm ngày nghỉ lễ đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Ngày nghỉ lễ Dark Theme Support */
    .ngaynghile-container {
        background: var(--bg);
        min-height: 100vh;
    }

    .ngaynghile-title {
        color: var(--primary);
    }

    .ngaynghile-card {
        background: var(--surface);
        color: var(--text);
        border: 1px solid var(--border);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
        transition: all 0.3s ease;
    }

    .ngaynghile-card:hover {
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
    }

    .ngaynghile-table {
        background: var(--surface);
        color: var(--text);
    }

    .ngaynghile-table th,
    .ngaynghile-table td {
        background: var(--surface);
        color: var(--text);
        border-color: var(--border);
    }

    .ngaynghile-table-header {
        background: var(--surface-2);
    }

    .ngaynghile-table tbody tr:hover {
        background: rgba(47, 133, 90, 0.1);
    }

    .ngaynghile-row-ongoing {
        background: rgba(16, 185, 129, 0.15) !important;
    }

    html.dark .ngaynghile-row-ongoing {
        background: rgba(52, 211, 153, 0.1) !important;
    }

    .ngaynghile-row-past {
        opacity: 0.6;
    }

    .badge-ongoing {
        background: var(--success);
        color: #0b1220;
    }

    html.dark .badge-ongoing {
        background: var(--success);
        color: #0f172a;
    }

    .badge-upcoming {
        background: #3b82f6;
        color: white;
    }

    html.dark .badge-upcoming {
        background: #60a5fa;
        color: #0f172a;
    }

    .ngaynghile-empty {
        color: var(--text-muted);
    }

    .ngaynghile-empty-icon {
        font-size: 3rem;
        color: var(--text-muted);
    }

    .btn-xs {
        padding: 0.15rem 0.4rem;
        font-size: 0.75rem;
        line-height: 1.2;
    }

    .btn-xs i {
        font-size: 0.85rem;
    }

    /* Alert messages dark theme */
    .alert-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--text);
        border-color: var(--success);
    }

    html.dark .alert-success {
        background: rgba(52, 211, 153, 0.15);
        border-color: var(--success);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.15);
        color: var(--text);
        border-color: var(--danger);
    }

    html.dark .alert-danger {
        background: rgba(248, 113, 113, 0.15);
        border-color: var(--danger);
    }

    .btn-close {
        filter: var(--text) == #e2e8f0 ? invert(1) : invert(0);
    }

    html.dark .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle delete confirmation
            document.querySelectorAll('.delete-form').forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    const ten = this.getAttribute('data-ten');
                    if (!confirm('Bạn có chắc muốn xóa ngày nghỉ "' + ten + '"?')) {
                        e.preventDefault();
                    }
                });
            });

            // Auto-hide alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = bootstrap.Alert.getInstance(alert);
                    if (bsAlert) {
                        bsAlert.close();
                    }
                }, 5000);
            });
        });
    </script>
}
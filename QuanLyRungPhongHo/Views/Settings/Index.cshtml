@model QuanLyRungPhongHo.Models.SettingsViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="settings-hero card border-0 shadow-sm mb-4">
    <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">@Localizer["Dashboard"]</p>
            <h3 class="mb-2 fw-bold">
                <i class="fa-solid fa-gear me-2"></i>@Localizer["SystemSettings"]
            </h3>
            <p class="mb-0 text-secondary">@Localizer["SystemSettingsDesc"]</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <div class="text-end">
                <div class="fw-semibold">@Model.HoTen</div>
                <div class="text-muted small">@Model.ChucVu</div>
                <div class="badge bg-primary-subtle text-primary border">@Model.Quyen</div>
            </div>
            <div class="settings-avatar">
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
    </div>
</div>

<div id="settings-alert" class="alert alert-success d-none" role="alert">
    <i class="fa-solid fa-circle-check me-2"></i>@Localizer["SaveSuccess"]
</div>

<div class="row g-4">
    <div class="col-xl-4">

        <!-- PROFILE -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-0">
                <div class="fw-semibold">
                    <i class="fa-solid fa-id-badge me-2 text-primary"></i>@Localizer["ProfileInfo"]
                </div>
            </div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-5">@Localizer["FullName"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.HoTen) ? Model.HoTen : "—")</dd>

                    <dt class="col-5">@Localizer["Username"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.TenDangNhap) ? Model.TenDangNhap : "—")</dd>

                    <dt class="col-5">@Localizer["Position"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.ChucVu) ? Model.ChucVu : "—")</dd>

                    <dt class="col-5">@Localizer["Role"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.Quyen) ? Model.Quyen : "—")</dd>

                    <dt class="col-5">@Localizer["Department"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.DonViCongTac) ? Model.DonViCongTac : "—")</dd>

                    <dt class="col-5">@Localizer["Phone"]</dt>
                    <dd class="col-7">@(!string.IsNullOrEmpty(Model.SoDienThoai) ? Model.SoDienThoai : "—")</dd>
                </dl>
            </div>
        </div>

        <!-- CONTACT -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <div class="fw-semibold">
                    <i class="fa-solid fa-circle-info me-2 text-success"></i>@Localizer["ContactNote"]
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">@Localizer["NotifyEmail"]</label>
                    <input type="email" id="setting-contact-email" class="form-control" placeholder="email@example.com" />
                    <div class="form-text">@Localizer["LocalOnlyNote"]</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["Phone"]</label>
                    <input type="text" id="setting-contact-phone" class="form-control" value="@(Model.SoDienThoai ?? "")" />
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["InternalNote"]</label>
                    <textarea id="setting-contact-note" class="form-control" rows="3"
                              placeholder="@Localizer["InternalNotePlaceholder"]"></textarea>
                </div>

                <button type="button" class="btn btn-primary w-100" id="btn-save-contact">
                    <i class="fa-solid fa-floppy-disk me-2"></i>@Localizer["SavePersonalSettings"]
                </button>
            </div>
        </div>
    </div>

    <!-- RIGHT -->
    <div class="col-xl-8">

        <!-- UI -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-0 d-flex justify-content-between align-items-center">
                <div class="fw-semibold">
                    <i class="fa-solid fa-display me-2 text-info"></i>@Localizer["DisplaySettings"]
                </div>
                <span class="badge bg-info-subtle text-info">@Localizer["BrowserOnly"]</span>
            </div>
            <div class="card-body">
                <div class="row gy-3 gx-4">
                    <div class="col-lg-5">
                        <label class="form-label">@Localizer["Theme"]</label>
                        <select class="form-select">
                            <option>@Localizer["ThemeLight"]</option>
                            <option>@Localizer["ThemeDark"]</option>
                            <option>@Localizer["ThemeAuto"]</option>
                        </select>
                    </div>
                    <div class="col-lg-5">
                        <label class="form-label">@Localizer["Language"]</label>
                        <select class="form-select"
                                onchange="location.href='@Url.Action("SetLanguage", "Localization")?culture=' + this.value + '&returnUrl=@Context.Request.Path'">

                            <option value="vi-VN"
                                    selected="@(System.Globalization.CultureInfo.CurrentUICulture.Name == "vi-VN")">
                                Tiếng Việt
                            </option>

                            <option value="en-US"
                                    selected="@(System.Globalization.CultureInfo.CurrentUICulture.Name == "en-US")">
                                English
                            </option>
                        </select>
                        <p class="text-muted small">@Localizer["LanguageNote"]</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- SECURITY -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-0 d-flex justify-content-between align-items-center">
                <div class="fw-semibold">
                    <i class="fa-solid fa-shield-halved me-2 text-danger"></i>@Localizer["SecuritySession"]
                </div>
                <span class="badge bg-danger-subtle text-danger">@Localizer["LoggedIn"]</span>
            </div>
            <div class="card-body">
                <p class="text-muted small">@Localizer["SecurityNote"]</p>

                <div class="d-flex gap-2">
                    <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket me-2"></i>@Localizer["Logout"]
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house me-2"></i>@Localizer["Home"]
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/settings.js" asp-append-version="true"></script>
}

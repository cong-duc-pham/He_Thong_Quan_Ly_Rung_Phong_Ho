@model QuanLyRungPhongHo.Models.NhatKyBaoVe
@using QuanLyRungPhongHo.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm nhật ký";
    var loRungs = ViewBag.LoRungs as List<SelectListItem> ?? new List<SelectListItem>();
    var loaiSuViec = ViewBag.LoaiSuViec as List<string> ?? new List<string>();
    var currentUser = ViewBag.CurrentNhanSuName as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4><i class="bi bi-plus-circle"></i> Thêm Nhật Ký Bảo Vệ</h4>
        </div>
        <div class="digioi-card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="digioi-alert digioi-alert-danger"></div>

                <div class="digioi-info-box">
                    <i class="bi bi-person-badge"></i>
                    Người ghi nhận: <strong>@(currentUser ?? "—")</strong>
                </div>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="NgayGhi"><i class="bi bi-calendar-event"></i> Ngày ghi</label>
                            <input asp-for="NgayGhi" type="datetime-local" value="@Model.NgayGhi.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="NgayGhi" class="digioi-text-danger"></span>
                        </div>
                    </div>
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="LoaiSuViec"><i class="bi bi-flag"></i> Loại sự việc</label>
                            <select asp-for="LoaiSuViec">
                                <option value="">-- Chọn loại --</option>
                                @foreach (var l in loaiSuViec)
                                {
                                    <option value="@l">@l</option>
                                }
                            </select>
                            <span asp-validation-for="LoaiSuViec" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="MaLo"><i class="bi bi-tree"></i> Lô rừng</label>
                            <select asp-for="MaLo">
                                <option value="">-- Chọn lô rừng --</option>
                                @foreach (var lo in loRungs)
                                {
                                    <option value="@lo.Value">@lo.Text</option>
                                }
                            </select>
                            <span asp-validation-for="MaLo" class="digioi-text-danger"></span>
                        </div>
                    </div>
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="ToaDoGPS"><i class="bi bi-geo-alt"></i> Tọa độ GPS</label>
                            <div class="d-flex gap-2">
                                <input asp-for="ToaDoGPS" placeholder="Lat,Lng" />
                                <button type="button" class="digioi-btn digioi-btn-outline" id="btnGetGps"><i class="bi bi-crosshair"></i></button>
                            </div>
                            <span asp-validation-for="ToaDoGPS" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="NoiDung"><i class="bi bi-journal-text"></i> Nội dung</label>
                    <textarea asp-for="NoiDung" rows="4" placeholder="Mô tả sự việc, hành động xử lý..."></textarea>
                    <span asp-validation-for="NoiDung" class="digioi-text-danger"></span>
                </div>

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary digioi-btn-lg"><i class="bi bi-x-circle"></i> Hủy</a>
                    <button type="submit" class="digioi-btn digioi-btn-success digioi-btn-lg"><i class="bi bi-check-circle"></i> Lưu</button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/nhatkybaove.js" asp-append-version="true"></script>
}

@model QuanLyRungPhongHo.Models.DanhMucThon
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}
@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}
<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4>
                <i class="bi bi-exclamation-triangle"></i> @Localizer["PageHeader"]
            </h4>
        </div>

        <div class="digioi-card-body">

            <div class="digioi-alert digioi-alert-warning">
                <i class="bi bi-info-circle"></i>
                <strong>@Localizer["Warning"]:</strong> @Localizer["ConfirmDeleteMessage"]
            </div>

            <div class="digioi-info-row">
                <div class="digioi-info-label">@Localizer["MaThon"]:</div>
                <div class="digioi-info-value">
                    <span class="digioi-badge digioi-badge-secondary">@Model.MaThon</span>
                </div>
            </div>

            <div class="digioi-info-row">
                <div class="digioi-info-label">@Localizer["TenThon"]:</div>
                <div class="digioi-info-value">
                    <span class="digioi-text-success fw-bold">@Model.TenThon</span>
                </div>
            </div>

            <div class="digioi-info-row">
                <div class="digioi-info-label">@Localizer["BelongToCommune"]:</div>
                <div class="digioi-info-value">
                    <span class="digioi-badge digioi-badge-success">@Model.DanhMucXa.TenXa</span>
                </div>
            </div>

            <div class="digioi-info-row">
                <div class="digioi-info-label">@Localizer["NumberOfForestLots"]:</div>
                <div class="digioi-info-value">
                    <span class="digioi-badge digioi-badge-info">@Model.LoRungs.Count @Localizer["LotUnit"]</span>
                </div>
            </div>

            @if (Model.LoRungs.Any())
            {
                <div class="digioi-alert digioi-alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>@Localizer["Note"]:</strong> @Localizer["HasForestLotsMessage"].Value.Replace("{0}", Model.LoRungs.Count.ToString())
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaThon" />

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                    </a>

                    <button type="submit"
                            class="digioi-btn digioi-btn-danger"
                            @(Model.LoRungs.Any() ? "disabled" : "")>
                        <i class="bi bi-trash"></i> @Localizer["ConfirmDelete"]
                    </button>
                </div>
            </form>

        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

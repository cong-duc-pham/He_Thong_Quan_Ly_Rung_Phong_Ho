@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["AppName"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sinhvat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/baocao-thongke.css" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/forestry.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <script>
        (function () {
            try {
                var raw = localStorage.getItem('qlrph.settings');
                if (!raw) return;
                var s = JSON.parse(raw);
                var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                var body = document.body;
                var root = document.documentElement;
                var isDark = s.theme === 'dark' || (s.theme === 'auto' && prefersDark);
                if (isDark) {
                    body.classList.add('theme-dark');
                    root.classList.add('dark');
                }
                if (s.compactSidebar) body.classList.add('compact-sidebar');
                if (s.density === 'compact') body.classList.add('density-compact');
                if (s.density === 'spacious') body.classList.add('density-spacious');
                if (s.highlightAlert) body.classList.add('highlight-alert');
            } catch (e) { }
        })();
    </script>

    <!-- HEADER -->
    <header class="header">
        <div class="header-left">
            <div class="menu-toggle" id="menuToggle">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div class="logo">
                <img src="~/images/LogoTree_XoaPhong-removebg-preview.png" alt="Logo">
                <span>@Localizer["AppName"]</span>
            </div>
        </div>

        <div class="header-right">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="user-info">
                    <span>
                        @Localizer["Hello"],
                        <strong>@(User.FindFirst("HoTen")?.Value ?? User.Identity.Name)</strong>
                    </span>
                    <span class="role">
                        (@(User.FindFirst("ChucVu")?.Value ?? Localizer["Staff"].Value))
                    </span>
                </div>

                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="logout" style="border:none;background:none;cursor:pointer;">
                        <i class="fas fa-sign-out-alt"></i> @Localizer["Logout"]
                    </button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="logout">
                    <i class="fas fa-sign-in-alt"></i> @Localizer["Login"]
                </a>
            }
        </div>
    </header>

    <div class="container">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <nav class="menu">
                <ul>
                    <li class="menu-item active">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i>
                            <span>@Localizer["Home"]</span>
                        </a>
                    </li>

                    <li class="menu-item has-submenu">
                        <a href="javascript:void(0)">
                            <i class="fas fa-map-marked-alt"></i>
                            <span>@Localizer["BoundaryManagement"]</span>
                            <i class="fas fa-chevron-down arrow"></i>
                        </a>
                        <ul class="submenu">
                            <li>
                                <a href="@Url.Action("Index", "DanhMucXa")">
                                    <i class="fas fa-building"></i> @Localizer["Commune"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "DanhMucThon")">
                                    <i class="fas fa-home"></i> @Localizer["Village"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "LoRung")">
                                    <i class="fas fa-tree"></i> @Localizer["ForestLot"]
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "NhanSu")">
                            <i class="fas fa-users"></i>
                            <span>@Localizer["HumanResource"]</span>
                        </a>
                    </li>

                    <!-- MENU MỚI: QUẢN LÝ CA LÀM VIỆC -->
                    <li class="menu-item has-submenu">
                        <a href="javascript:void(0)">
                            <i class="fas fa-calendar-alt"></i>
                            <span>@Localizer["WorkSchedule"]</span>
                            <i class="fas fa-chevron-down arrow"></i>
                        </a>
                        <ul class="submenu">
                            <li>
                                <a href="@Url.Action("Index", "CaLamViec")">
                                    <i class="fas fa-clock"></i> @Localizer["ShiftManagement"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "LichLamViec")">
                                    <i class="fas fa-calendar-check"></i> @Localizer["ScheduleManagement"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "DonXinNghi")">
                                    <i class="fas fa-file-alt"></i> @Localizer["LeaveRequest"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "ChamCong")">
                                    <i class="fas fa-fingerprint"></i> @Localizer["Attendance"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "NgayNghiLe")">
                                    <i class="fas fa-umbrella-beach"></i> @Localizer["Holidays"]
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "SinhVat")">
                            <i class="fas fa-tree"></i>
                            <span>@Localizer["Wildlife"]</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "NhatKyBaoVe")">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>@Localizer["ProtectionLog"]</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "Settings")">
                            <i class="fas fa-gear"></i>
                            <span>@Localizer["Settings"]</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Admin_Tinh"))
                    {
                        <li class="menu-item admin-only">
                            <a href="@Url.Action("Index", "PhanQuyen")">
                                <i class="fas fa-shield-alt"></i>
                                <span>@Localizer["Authorization"]</span>
                            </a>
                        </li>

                        <li class="menu-item admin-only">
                            <a href="@Url.Action("Index", "TaiKhoan")">
                                <i class="fas fa-user-shield"></i>
                                <span>@Localizer["SystemAdmin"]</span>
                            </a>
                        </li>

                        <li class="menu-item admin-only">
                            <a href="@Url.Action("Index", "BaoCaoThongKe")">
                                <i class="fas fa-chart-bar"></i>
                                <span>@Localizer["Report"]</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </aside>

        <main role="main" class="pb-3" id="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/sinhvat.js"></script>
    <script src="~/js/forestry.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/digioi.js" asp-append-version="true"></script>
    <script src="~/js/lorung.js" asp-append-version="true"></script>
    <script src="~/js/nhansu.js" asp-append-version="true"></script>
    <script src="~/js/baocao-thongke.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
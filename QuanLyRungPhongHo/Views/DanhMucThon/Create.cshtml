@model QuanLyRungPhongHo.Models.DanhMucThon

@{
    ViewData["Title"] = "Thêm Thôn/Bản";
}
@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}
<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4>
                <i class="bi bi-plus-circle"></i> Thêm Thôn/Bản Mới
            </h4>
        </div>

        <div class="digioi-card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="digioi-alert digioi-alert-danger"></div>

                <div class="digioi-form-group">
                    <label asp-for="MaThon">
                        <i class="bi bi-tag"></i> Mã Thôn/Bản <span class="text-danger">*</span>
                    </label>
                    <input asp-for="MaThon"
                           placeholder="Ví dụ: THON001"
                           maxlength="10" />
                    <span asp-validation-for="MaThon" class="digioi-text-danger"></span>
                    <div class="digioi-form-text">Tối đa 10 ký tự. Mã không được trùng.</div>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="TenThon">
                        <i class="bi bi-geo-alt"></i> Tên Thôn/Bản <span class="text-danger">*</span>
                    </label>
                    <input asp-for="TenThon"
                           placeholder="Ví dụ: Thôn Trung Tâm"
                           maxlength="100" />
                    <span asp-validation-for="TenThon" class="digioi-text-danger"></span>
                    <div class="digioi-form-text">Tối đa 100 ký tự.</div>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="MaXa">
                        <i class="bi bi-building"></i> Thuộc Xã <span class="text-danger">*</span>
                    </label>
                    <select asp-for="MaXa"
                            asp-items="ViewBag.MaXa">
                        <option value="">-- Chọn xã --</option>
                    </select>
                    <span asp-validation-for="MaXa" class="digioi-text-danger"></span>
                </div>

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                    <button type="submit" class="digioi-btn digioi-btn-success">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@section Styles {
    <link rel="stylesheet" href="~/css/sinhvat.css" />
}
@model SinhVat

<div class="page-header">
    <h2><i class="fas fa-seedling"></i> Thêm sinh vật mới</h2>
</div>

<div class="card-box">
    <form asp-action="Create" method="post" class="form-custom">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="TenLoai" class="form-label">
                <i class="fas fa-tag"></i> Tên loài
            </label>
            <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loài..." />
            <span asp-validation-for="TenLoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LoaiSV" class="form-label">
                <i class="fas fa-list"></i> Loại sinh vật
            </label>
            <select asp-for="LoaiSV" class="form-control">
                <option value="">-- Chọn loại --</option>
                <option value="Thực vật">🌿 Thực vật</option>
                <option value="Động vật">🐾 Động vật</option>
                <option value="Vi sinh vật">🦠 Vi sinh vật</option>
            </select>
            <span asp-validation-for="LoaiSV" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MucDoQuyHiem" class="form-label">
                <i class="fas fa-star"></i> Mức độ quý hiếm
            </label>
            <select asp-for="MucDoQuyHiem" class="form-control">
                <option value="">-- Chọn mức độ --</option>
                <option value="Thường">Thường</option>
                <option value="Hiếm">Hiếm</option>
                <option value="Rất hiếm">Rất hiếm</option>
                <option value="Nguy cấp">Nguy cấp</option>
            </select>
            <span asp-validation-for="MucDoQuyHiem" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaLo" class="form-label">
                <i class="fas fa-map-marked-alt"></i> Lô rừng
            </label>
            <select asp-for="MaLo" class="form-control" asp-items="ViewBag.MaLo">
                <option value="">-- Chọn lô rừng --</option>
            </select>
            <span asp-validation-for="MaLo" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
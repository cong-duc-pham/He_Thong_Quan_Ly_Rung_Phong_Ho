@model QuanLyRungPhongHo.Models.DanhMucThon
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}
@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}
<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4>
                <i class="bi bi-pencil-square"></i> @Localizer["PageHeader"]
            </h4>
        </div>

        <div class="digioi-card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="digioi-alert digioi-alert-danger"></div>

                <div class="digioi-form-group">
                    <label asp-for="MaThon">
                        <i class="bi bi-tag"></i> @Localizer["MaThon"]
                    </label>
                    <input asp-for="MaThon"
                           readonly />
                    <div class="digioi-form-text">@Localizer["MaThonReadonly"]</div>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="TenThon">
                        <i class="bi bi-geo-alt"></i> @Localizer["TenThon"] <span class="text-danger">*</span>
                    </label>
                    <input asp-for="TenThon"
                           placeholder="@Localizer["TenThonPlaceholder"]"
                           maxlength="100" />
                    <span asp-validation-for="TenThon" class="digioi-text-danger"></span>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="MaXa">
                        <i class="bi bi-building"></i> @Localizer["BelongToCommune"] <span class="text-danger">*</span>
                    </label>
                    <select asp-for="MaXa"
                            asp-items="ViewBag.MaXa">
                        <option value="">@Localizer["SelectCommune"]</option>
                    </select>
                    <span asp-validation-for="MaXa" class="digioi-text-danger"></span>
                </div>

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary">
                        <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                    </a>

                    <button type="submit" class="digioi-btn digioi-btn-warning">
                        <i class="bi bi-check-circle"></i> @Localizer["Update"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

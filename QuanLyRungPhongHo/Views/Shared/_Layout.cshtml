@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["AppName"]</title>   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/lichlamviec.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sinhvat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/baocao-thongke.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PhanQuyen.css" asp-append-version="true" />
   
    <link href="~/css/styles.css" rel="stylesheet" />
    @* <link href="~/css/forestry.css" rel="stylesheet" asp-append-version="true" /> *@

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <script>
        // Khởi tạo theme ngay lập tức để tránh flash
        (function () {
            try {
                var theme = localStorage.getItem('qlrph.theme') || 'light';
                var root = document.documentElement;
                var body = document.body;
                
                if (theme === 'auto') {
                    var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                    theme = prefersDark ? 'dark' : 'light';
                }
                
                if (theme === 'dark') {
                    root.classList.add('dark');
                    body.classList.add('theme-dark');
                } else {
                    root.classList.add('light');
                    body.classList.add('theme-light');
                }
                
                // Áp dụng các settings khác nếu có
                var raw = localStorage.getItem('qlrph.settings');
                if (raw) {
                    var s = JSON.parse(raw);
                    if (s.compactSidebar) body.classList.add('compact-sidebar');
                    if (s.density === 'compact') body.classList.add('density-compact');
                    if (s.density === 'spacious') body.classList.add('density-spacious');
                    if (s.highlightAlert) body.classList.add('highlight-alert');
                }
            } catch (e) { console.warn('Lỗi khởi tạo theme:', e); }
        })();
    </script>

    <!-- HEADER -->
    <header class="header">
        <div class="header-left">
            <div class="menu-toggle" id="menuToggle">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div class="logo">
                <img src="~/images/LogoTree_XoaPhong-removebg-preview.png" alt="Logo">
                <span>@Localizer["AppName"]</span>
            </div>
        </div>

        <div class="header-right">
            <!-- Language Selector -->
            <div class="language-selector dropdown">
                <button class="language-toggle-btn dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="Chọn ngôn ngữ / Select language">
                    @{
                        var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                        var flagIcon = currentCulture == "vi" ? "🇻🇳" : "🇬🇧";
                        var langText = currentCulture == "vi" ? "VI" : "EN";
                    }
                    <span class="flag-icon">@flagIcon</span>
                    <span class="lang-text">@langText</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                    <li>
                        <a class="dropdown-item @(currentCulture == "vi" ? "active" : "")" 
                           href="@Url.Action("SetLanguage", "Localization", new { culture = "vi", returnUrl = Context.Request.Path + Context.Request.QueryString })">
                            <span class="flag-icon">🇻🇳</span> Tiếng Việt
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item @(currentCulture == "en" ? "active" : "")" 
                           href="@Url.Action("SetLanguage", "Localization", new { culture = "en", returnUrl = Context.Request.Path + Context.Request.QueryString })">
                            <span class="flag-icon">🇬🇧</span> English
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Theme Toggle Button -->
            <button id="themeToggle" class="theme-toggle-btn" type="button" title="Đổi theme">
                <i class="fas fa-sun"></i>
            </button>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="user-info">
                    <span>
                        @Localizer["Hello"],
                        <strong>@(User.FindFirst("HoTen")?.Value ?? User.Identity.Name)</strong>
                    </span>
                    <span class="role">
                        (@(User.FindFirst("ChucVu")?.Value ?? Localizer["Staff"].Value))
                    </span>
                </div>

                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="logout" style="border:none;background:none;cursor:pointer;">
                        <i class="fas fa-sign-out-alt"></i> @Localizer["Logout"]
                    </button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="logout">
                    <i class="fas fa-sign-in-alt"></i> @Localizer["Login"]
                </a>
            }
        </div>
    </header>

    <div class="container">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <nav class="menu">
                <ul>
                    <li class="menu-item active">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i>
                            <span>@Localizer["Home"]</span>
                        </a>
                    </li>

                    <li class="menu-item has-submenu">
                        <a href="javascript:void(0)">
                            <i class="fas fa-map-marked-alt"></i>
                            <span>@Localizer["BoundaryManagement"]</span>
                            <i class="fas fa-chevron-down arrow"></i>
                        </a>
                        <ul class="submenu">
                            <li>
                                <a href="@Url.Action("Index", "DanhMucXa")">
                                    <i class="fas fa-building"></i> @Localizer["Commune"]
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "DanhMucThon")">
                                    <i class="fas fa-home"></i> @Localizer["Village"]
                                </a>
                            </li>
                            <li>

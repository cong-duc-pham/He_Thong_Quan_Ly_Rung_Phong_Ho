@section Styles {
    <link rel="stylesheet" href="~/css/sinhvat.css" />
}
@model IEnumerable<SinhVat>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["PageTitle"];
}

<div class="page-header">
    <h2><i class="fas fa-tree"></i> @Localizer["PageHeader"]</h2>
</div>
<div class="card-box">
    <div class="toolbar">
        <input type="text" id="searchInput" class="form-control"
               placeholder="@Localizer["SearchPlaceholder"]" />
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> @Localizer["AddNew"]
        </a>
    </div>
    <table class="table-custom" id="sinhVatTable">
        <thead>
            <tr>
                <th>@Localizer["SpeciesName"]</th>
                <th>@Localizer["Type"]</th>
                <th>@Localizer["RarityLevel"]</th>
                <th>@Localizer["ForestLot"]</th>
                <th class="text-center">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="empty">
                        <i class="fas fa-seedling"></i> @Localizer["NoData"]
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenLoai</td>
                        <td>
                            <span class="badge badge-type">
                                @if (item.LoaiSV == "Thực vật")
                                {
                                    <i class="fas fa-leaf"></i>
                                    @Localizer["TypePlant"]
                                }
                                else if (item.LoaiSV == "Động vật")
                                {
                                    <i class="fas fa-paw"></i>
                                    @Localizer["TypeAnimal"]
                                }
                                else
                                {
                                    <i class="fas fa-bacteria"></i>
                                    @Localizer["TypeMicrobe"]
                                }
                            </span>
                        </td>
                        <td>
                            <span class="badge badge-level">
                                @if (item.MucDoQuyHiem == "Nguy cấp")
                                {
                                    <i class="fas fa-exclamation-triangle"></i>
                                    @Localizer["RareCritical"]
                                }
                                else if (item.MucDoQuyHiem == "Rất hiếm")
                                {
                                    <i class="fas fa-star"></i>
                                    @Localizer["RareVeryRare"]
                                }
                                else if (item.MucDoQuyHiem == "Hiếm")
                                {
                                    <i class="fas fa-star-half-alt"></i>
                                    @Localizer["RareRare"]
                                }
                                else
                                {
                                    <i class="fas fa-circle"></i>
                                    @Localizer["RareCommon"]
                                }
                            </span>
                        </td>
                        <td>
                            <i class="fas fa-map-marker-alt"></i>
                            TK @item.LoRung?.SoTieuKhu -
                            K @item.LoRung?.SoKhoanh -
                            L @item.LoRung?.SoLo
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaSV"
                               class="btn-icon edit" title="@Localizer["Edit"]">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaSV"
                               onclick="return confirm('@Localizer["DeleteConfirm"]')"
                               class="btn-icon delete" title="@Localizer["Delete"]">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/sinhvat.js"></script>
}
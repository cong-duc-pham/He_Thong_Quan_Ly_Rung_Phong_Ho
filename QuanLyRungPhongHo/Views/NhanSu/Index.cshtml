@using QuanLyRungPhongHo.Models
@model IEnumerable<NhanSuViewModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["PageTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-3">
    <h3 class="text-success fw-bold mb-4"><i class="bi bi-people-fill"></i> @Localizer["PageHeader"]</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <!-- Form không submit, chỉ nhập dữ liệu -->
            <div id="nhansuSearchForm" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <input type="text" id="nhansuSearchInput" name="searchString" class="form-control" 
                           placeholder="@Localizer["SearchPlaceholder"]" value="">
                </div>
                <div class="col-md-3">
                    <select id="nhansuXaFilter" name="maXaFilter" class="form-select">
                        <option value="">@Localizer["AllArea"]</option>
                        @foreach (var xa in (SelectList)ViewBag.DsXa)
                        {
                            <option value="@xa.Value">@xa.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="nhansuRoleFilter" name="roleFilter" class="form-select">
                        <option value="">@Localizer["AllPositions"]</option>
                        <option value="Trạm trưởng">@Localizer["PositionStationChief"]</option>
                        <option value="Kiểm lâm viên">@Localizer["PositionForester"]</option>
                        <option value="Bảo vệ rừng">@Localizer["PositionForestGuard"]</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-success w-100" onclick="openModal()" style="height: 38px;">
                        @Localizer["AddNew"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê kết quả tìm kiếm -->
    <div class="mb-3">
        <span class="badge bg-info text-dark" id="nhansuTotal">
            @Localizer["TotalCount"]: @Model.Count() @Localizer["StaffUnit"]
        </span>
        <span class="badge bg-primary" id="nhansuSearchStatus" style="display: none;"></span>
    </div>

    <!-- Bảng Desktop -->
    <div class="table-responsive d-none d-md-block bg-white shadow-sm rounded">
        <table class="table table-hover align-middle mb-0" id="nhansuTable">
            <thead class="bg-success text-white">
                <tr>
                    <th>@Localizer["FullName"]</th>
                    <th>@Localizer["Position"]</th>
                    <th>@Localizer["Contact"]</th>
                    <th>@Localizer["Area"]</th>
                    <th>@Localizer["Account"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody id="nhansuTableBody">
                @if (Model.Any())
                {   
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.HoTen</div>
                            </td>
                            <td><span class="badge bg-primary">@item.ChucVu</span></td>
                            <td>
                                <div><small class="text-muted"><i class="bi bi-telephone"></i> @item.SDT</small></div>
                                @if (!string.IsNullOrEmpty(item.Email))
                                {
                                    <div><small class="text-muted"><i class="bi bi-envelope"></i> @item.Email</small></div>
                                }
                            </td>
                            <td>@item.TenXa</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.TenDangNhap))
                                {
                                    <span>@item.TenDangNhap</span>
                                    <span class="text-muted">(@item.Quyen)</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-exclamation-circle"></i> @Localizer["NoAccount"]</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary" onclick="editData(@item.MaNV, event)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteData(@item.MaNV)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center text-muted py-3">@Localizer["NoData"]</td></tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile View -->
    <div class="d-md-none" id="nhansuMobileView">
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm border-start border-4 border-success" data-nhansu-id="@item.MaNV">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="fw-bold text-success mb-0">@item.HoTen</h6>
                        <span class="badge bg-primary">@item.ChucVu</span>
                    </div>
                    <p class="mb-1 small"><i class="bi bi-geo-alt"></i> @item.TenXa</p>
                    <p class="mb-1 small"><i class="bi bi-telephone"></i> @item.SDT</p>
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <p class="mb-1 small"><i class="bi bi-envelope"></i> @item.Email</p>
                    }
                    <p class="mb-2 small"><i class="bi bi-person"></i> TK: @item.TenDangNhap</p>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary btn-sm flex-fill" onclick="editData(@item.MaNV, event)">@Localizer["Edit"]</button>
                        <button class="btn btn-outline-danger btn-sm flex-fill" onclick="deleteData(@item.MaNV)">@Localizer["Delete"]</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Rừng Phòng Hộ</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <div class="header-left">
            <div class="menu-toggle" id="menuToggle">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div class="logo">
                <img src="~/images/LogoTree_XoaPhong-removebg-preview.png" alt="Logo">
                <span>Quản lý Rừng Phòng Hộ</span>
            </div>
        </div>
        <div class="header-right">
            <div class="user-info">
                <span>Xin chào, <strong>Nguyễn Văn A</strong></span>
                <span class="role">(Admin Tỉnh)</span>
            </div>
            <a href="#" class="logout">
                <i class="fas fa-sign-out-alt"></i> Đăng xuất
            </a>
        </div>
    </header>

    <div class="container">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <nav class="menu">
                <ul>
                    <li class="menu-item active">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="menu-item has-submenu">
                        <a href="javascript:void(0)">
                            <i class="fas fa-map-marked-alt"></i>
                            <span>Quản lý địa giới</span>
                            <i class="fas fa-chevron-down arrow"></i>
                        </a>
                        <ul class="submenu">
                            <li><a href="@Url.Action("Index", "DanhMucXa")"><i class="fas fa-building"></i> Danh mục Xã</a></li>
                            <li><a href="@Url.Action("Index", "DanhMucThon")"><i class="fas fa-home"></i> Danh mục Thôn/Bản</a></li>
                            <li><a href="@Url.Action("Index", "LoRung")"><i class="fas fa-tree"></i> Quản lý Lô rừng</a></li>
                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <i class="fas fa-users"></i>
                            <span>Quản lý nhân sự</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <i class="fas fa-tree"></i>
                            <span>Sinh vật rừng</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>Nhật ký bảo vệ</span>
                        </a>
                    </li>
                    <li class="menu-item admin-only">
                        <a href="#">
                            <i class="fas fa-user-shield"></i>
                            <span>Quản trị hệ thống</span>
                        </a>
                    </li>
                    <li class="menu-item admin-only">
                        <a href="#">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo thống kê</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QuanLyRungPhongHo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/main.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html\]
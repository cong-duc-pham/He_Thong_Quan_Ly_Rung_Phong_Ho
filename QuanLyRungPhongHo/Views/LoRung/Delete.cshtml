@model QuanLyRungPhongHo.Models.LoRung

@{
    ViewData["Title"] = "Xóa Lô Rừng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4>
                <i class="bi bi-exclamation-triangle"></i> Xác Nhận Xóa Lô Rừng
            </h4>
        </div>

        <div class="digioi-card-body">
            <div class="digioi-alert digioi-alert-warning">
                <i class="bi bi-info-circle"></i>
                <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa lô rừng này không?  
                Hành động này không thể hoàn tác!
            </div>

            <div class="digioi-info-grid">
                <!-- Thông tin kỹ thuật -->
                <div class="digioi-info-card">
                    <div class="digioi-info-card-header">
                        <i class="bi bi-info-circle"></i> Thông Tin Kỹ Thuật
                    </div>
                    <div class="digioi-info-card-body">
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Mã Lô:</div>
                            <div class="digioi-info-value">
                                <span class="digioi-badge digioi-badge-secondary">@Model.MaLo</span>
                            </div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Tiểu Khu:</div>
                            <div class="digioi-info-value">@Model.SoTieuKhu</div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Khoảnh:</div>
                            <div class="digioi-info-value">@Model.SoKhoanh</div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Lô:</div>
                            <div class="digioi-info-value">@Model.SoLo</div>
                        </div>
                    </div>
                </div>

                <!-- Vị trí địa lý -->
                <div class="digioi-info-card">
                    <div class="digioi-info-card-header">
                        <i class="bi bi-geo-alt"></i> Vị Trí Địa Lý
                    </div>
                    <div class="digioi-info-card-body">
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Thôn/Bản:</div>
                            <div class="digioi-info-value">
                                <strong>@Model.DanhMucThon?.TenThon</strong>
                            </div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">Xã:</div>
                            <div class="digioi-info-value">
                                <span class="digioi-badge digioi-badge-success">
                                    @Model.DanhMucThon?.DanhMucXa?.TenXa
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin rừng -->
            <div class="digioi-info-card">
                <div class="digioi-info-card-header">
                    <i class="bi bi-tree-fill"></i> Thông Tin Rừng
                </div>
                <div class="digioi-info-card-body">
                    <div class="digioi-form-row">
                        <div class="digioi-form-col">
                            <strong>Diện Tích:</strong><br />
                            <span style="font-size: 24px; color: var(--green);">
                                @(Model.DienTich?.ToString("N2") ?? "—") ha
                            </span>
                        </div>

                        <div class="digioi-form-col">
                            <strong>Loại Rừng:</strong><br />
                            <span class="digioi-badge digioi-badge-info">
                                @Model.LoaiRung
                            </span>
                        </div>

                        <div class="digioi-form-col">
                            <strong>Trạng Thái:</strong><br />
                            @{
                                var badgeClass = Model.TrangThai switch
                                {
                                    "Rừng giàu" => "digioi-badge-success",
                                    "Rừng trung bình" => "digioi-badge-info",
                                    "Rừng nghèo" => "digioi-badge-warning",
                                    "Đất trống" => "digioi-badge-secondary",
                                    _ => "digioi-badge-secondary"
                                };
                            }
                            <span class="digioi-badge @badgeClass">
                                @Model.TrangThai
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaLo" />
                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary digioi-btn-lg">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                    <button type="submit" class="digioi-btn digioi-btn-danger digioi-btn-lg">
                        <i class="bi bi-trash"></i> Xác Nhận Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

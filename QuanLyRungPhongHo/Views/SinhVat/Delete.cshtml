@inject IViewLocalizer Localizer
@section Styles {
    <link rel="stylesheet" href="~/css/sinhvat.css" />
}
@model SinhVat

<div class="page-header">
    <h2><i class="fas fa-trash-alt"></i> @Localizer["PageTitle"]</h2>
</div>

<div class="card-box">
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>@Localizer["Warning"]:</strong> @Localizer["DeleteWarning"]
    </div>

    <div class="detail-info">
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-tag"></i> @Localizer["SpeciesName"]:
            </span>
            <span class="info-value">@Model.TenLoai</span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-list"></i> @Localizer["WildlifeType"]:
            </span>
            <span class="info-value">
                <span class="badge badge-type">@Model.LoaiSV</span>
            </span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-star"></i> @Localizer["RarityLevel"]:
            </span>
            <span class="info-value">
                <span class="badge badge-level">@Model.MucDoQuyHiem</span>
            </span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-map-marker-alt"></i> @Localizer["ForestLot"]:
            </span>
            <span class="info-value">
                @Localizer["SubCompartment"] @Model.LoRung?.SoTieuKhu -
                @Localizer["Compartment"] @Model.LoRung?.SoKhoanh -
                @Localizer["Lot"] @Model.LoRung?.SoLo
            </span>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="form-actions">
        <input type="hidden" asp-for="MaSV" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> @Localizer["ConfirmDelete"]
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> @Localizer["Cancel"]
        </a>
    </form>
</div>
@model QuanLyRungPhongHo.Models.DanhMucXa
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-page">
    <div class="digioi-form-center">

        <div class="digioi-card danger">
            <div class="digioi-header danger">
                <h4>
                    <i class="bi bi-exclamation-triangle"></i> @Localizer["PageHeader"]
                </h4>
            </div>

            <div class="card-body">

                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i>
                    <strong>@Localizer["WarningTitle"]</strong> @Localizer["WarningMessage"]
                    <strong>@Localizer["CannotUndo"]</strong>.
                </div>

                <!-- Thông tin xã -->
                <div class="mb-3">
                    <strong>@Localizer["MaXa"]</strong>
                    <span class="badge bg-secondary ms-2">@Model.MaXa</span>
                </div>

                <div class="mb-3">
                    <strong>@Localizer["TenXa"]</strong>
                    <span class="text-success fw-bold ms-2">@Model.TenXa</span>
                </div>

                <div class="mb-4">
                    <strong>@Localizer["VillageCount"]</strong>
                    <span class="badge bg-info text-dark ms-2">
                        @Model.DanhMucThons.Count @Localizer["Villages"]
                    </span>
                </div>

                @if (Model.DanhMucThons.Any())
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>@Localizer["NoteTitle"]</strong>
                        @Localizer["NoteMessage"] <strong>@Model.DanhMucThons.Count</strong> @Localizer["NoteMessage2"]
                    </div>
                }

                <!-- Nút -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MaXa" />

                    <div class="form-actions">
                        <a asp-action="Index" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                        </a>
                        <button type="submit"
                                class="btn btn-danger"
                                @(Model.DanhMucThons.Any() ? "disabled" : "")>
                            <i class="bi bi-trash"></i> @Localizer["ConfirmDelete"]
                        </button>
                    </div>
                </form>

            </div>
        </div>

        <div class="back-link">
            <a asp-action="Index">
                <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
            </a>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/digioi.js" asp-append-version="true"></script>
}
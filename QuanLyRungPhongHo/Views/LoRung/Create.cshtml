@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model QuanLyRungPhongHo.Models.LoRung

@{
    ViewData["Title"] = Localizer["PageTitle"];
    var danhMucXa = ViewBag.DanhMucXa as List<QuanLyRungPhongHo.Models.DanhMucXa>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4>
                <i class="bi bi-plus-circle"></i> @Localizer["PageHeader"]
            </h4>
        </div>

        <div class="digioi-card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="digioi-alert digioi-alert-danger"></div>

                <!-- Thông tin kỹ thuật -->
                <h5 class="digioi-section-title">
                    <i class="bi bi-info-circle"></i> @Localizer["TechnicalInfo"]
                </h5>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="SoTieuKhu">
                                <i class="bi bi-123"></i> @Localizer["SubCompartment"]
                            </label>
                            <input asp-for="SoTieuKhu" type="number"
                                   placeholder="@Localizer["SubCompartmentPlaceholder"]" min="1" max="999" />
                            <span asp-validation-for="SoTieuKhu" class="digioi-text-danger"></span>
                        </div>
                    </div>

                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="SoKhoanh">
                                <i class="bi bi-123"></i> @Localizer["Compartment"]
                            </label>
                            <input asp-for="SoKhoanh" type="number"
                                   placeholder="@Localizer["CompartmentPlaceholder"]" min="1" max="999" />
                            <span asp-validation-for="SoKhoanh" class="digioi-text-danger"></span>
                        </div>
                    </div>

                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="SoLo">
                                <i class="bi bi-123"></i> @Localizer["Lot"]
                            </label>
                            <input asp-for="SoLo" type="number"
                                   placeholder="@Localizer["LotPlaceholder"]" min="1" max="999" />
                            <span asp-validation-for="SoLo" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Vị trí địa lý -->
                <h5 class="digioi-section-title">
                    <i class="bi bi-geo-alt"></i> @Localizer["GeographicalLocation"]
                </h5>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label>
                                <i class="bi bi-building"></i> @Localizer["Commune"] <span class="text-danger">@Localizer["Required"]</span>
                            </label>
                            <select id="selectXa">
                                <option value="">@Localizer["SelectCommune"]</option>
                                @foreach (var xa in danhMucXa)
                                {
                                    <option value="@xa.MaXa">@xa.TenXa</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="MaThon">
                                <i class="bi bi-geo-alt"></i> @Localizer["BelongsToVillage"]
                            </label>
                            <select asp-for="MaThon" id="selectThon">
                                <option value="">@Localizer["SelectVillageFirst"]</option>
                            </select>
                            <span asp-validation-for="MaThon" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Thông tin rừng -->
                <h5 class="digioi-section-title">
                    <i class="bi bi-tree-fill"></i> @Localizer["ForestInfo"]
                </h5>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="DienTich">
                                <i class="bi bi-rulers"></i> @Localizer["Area"]
                            </label>
                            <input asp-for="DienTich" type="number"
                                   step="0.01" placeholder="@Localizer["AreaPlaceholder"]" />
                            <span asp-validation-for="DienTich" class="digioi-text-danger"></span>
                        </div>
                    </div>

                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="LoaiRung">
                                <i class="bi bi-tree"></i> @Localizer["ForestType"]
                            </label>
                            <select asp-for="LoaiRung" asp-items="ViewBag.LoaiRung">
                                <option value="">@Localizer["SelectForestType"]</option>
                            </select>
                            <span asp-validation-for="LoaiRung" class="digioi-text-danger"></span>
                        </div>
                    </div>

                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="TrangThai">
                                <i class="bi bi-info-circle"></i> @Localizer["Status"]
                            </label>
                            <select asp-for="TrangThai" asp-items="ViewBag.TrangThai">
                                <option value="">@Localizer["SelectStatus"]</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary digioi-btn-lg">
                        <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                    </a>
                    <button type="submit" class="digioi-btn digioi-btn-success digioi-btn-lg">
                        <i class="bi bi-check-circle"></i> @Localizer["Save"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index">
            <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/lorung.js"></script>
}

                 
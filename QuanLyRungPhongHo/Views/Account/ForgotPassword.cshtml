@model QuanLyRungPhongHo.Models.ForgotPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu - Quản Lý Rừng Phòng Hộ</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .reset-hero {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
            margin-bottom: 30px;
            padding: 20px 0;
        }

        .reset-steps {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            position: relative;
        }

        .reset-steps::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            height: 2px;
            background: #e0e0e0;
            z-index: 0;
        }

        .step {
            position: relative;
            z-index: 1;
            flex: 1;
            text-align: center;
        }

        .step-icon {
            width: 40px;
            height: 40px;
            margin: 0 auto 10px;
            background: #f0f0f0;
            border: 2px solid #ddd;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: #666;
        }

        .step.active .step-icon {
            background: #28a745;
            border-color: #28a745;
            color: white;
        }

        .step-label {
            font-size: 12px;
            color: #666;
            margin-top: 8px;
        }

        .password-strength {
            margin-top: 15px;
        }

        .strength-bar {
            height: 4px;
            background: #e0e0e0;
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 8px;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            background: #dc3545;
            border-radius: 2px;
            transition: width 0.3s, background-color 0.3s;
        }

        .strength-fill.weak {
            width: 33%;
            background: #dc3545;
        }

        .strength-fill.medium {
            width: 66%;
            background: #ffc107;
        }

        .strength-fill.strong {
            width: 100%;
            background: #28a745;
        }

        .strength-text {
            font-size: 12px;
            color: #666;
        }

        .requirement-list {
            font-size: 12px;
            color: #666;
            margin-top: 10px;
        }

        .requirement-item {
            padding: 4px 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .requirement-icon {
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 1px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
        }

        .requirement-icon.met {
            background: #28a745;
            border-color: #28a745;
            color: white;
        }

        .info-box {
            background: #e7f3ff;
            border-left: 4px solid #2196F3;
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 4px;
            font-size: 13px;
            color: #0c5aa0;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .back-link a {
            color: #28a745;
            text-decoration: none;
            font-size: 13px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .back-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <div class="logo-section">
                <div class="tree-icon">
                    <img class="IMG_LOGIN" src="~/images/LogoTree_XoaPhong-removebg-preview.png" alt="Logo">
                </div>
                <h1>Quản Lý Rừng Phòng Hộ</h1>
                <p>Đặt lại mật khẩu tài khoản của bạn một cách an toàn</p>
            </div>
        </div>

        <div class="login-right">
            <div class="login-header">
                <h2><i class="fas fa-lock-open"></i> Quên Mật Khẩu</h2>
                <p>Nhập địa chỉ email của bạn để nhận mã OTP</p>
            </div>

            <!-- Progress Steps -->
            <div class="reset-steps">
                <div class="step active">
                    <div class="step-icon">1</div>
                    <div class="step-label">Xác Nhận Email</div>
                </div>
                <div class="step">
                    <div class="step-icon">2</div>
                    <div class="step-label">Nhập OTP</div>
                </div>
                <div class="step">
                    <div class="step-icon">3</div>
                    <div class="step-label">Mật Khẩu Mới</div>
                </div>
            </div>

            <!-- Info Box -->
            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                Vui lòng nhập địa chỉ email đã đăng ký trong hệ thống
            </div>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">Địa Chỉ Email</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email"
                               id="emailInput"
                               class="form-control"
                               placeholder="Ví dụ: email@example.com"
                               autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert-message show error">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewBag.ErrorMessage
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-message show success">
                        <i class="fas fa-check-circle"></i>
                        @TempData["SuccessMessage"]
                    </div>
                }

                <button type="submit" class="login-btn">
                    <span>Tiếp Tục</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>

            <div class="back-link">
                <a asp-action="Login" asp-controller="Account">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>

    <script src="~/js/Login.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html></html>
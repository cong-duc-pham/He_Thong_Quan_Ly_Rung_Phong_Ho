@using QuanLyRungPhongHo.Models
@model IEnumerable<NhanSuViewModel>

@{
    ViewBag.Title = "Quản lý Nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-3">
    <h3 class="text-success fw-bold mb-4"><i class="bi bi-people-fill"></i> Quản lý Nhân sự</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm("Index", "NhanSu", FormMethod.Get, new { @class = "row g-3 align-items-center" }))
            {
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control" 
                           placeholder="Tìm theo tên hoặc SĐT..." value="@ViewBag.CurrentSearch">
                </div>
                <div class="col-md-3">
                    @Html.DropDownList("maXaFilter", (SelectList)ViewBag.DsXa, "--- Tất cả địa bàn ---", 
                        new { @class = "form-select", @onchange = "this.form.submit();" })
                </div>
                <div class="col-md-3">
                    <select name="roleFilter" class="form-select" onchange="this.form.submit();">
                        <option value="">-- Tất cả chức vụ --</option>
                        <option value="Trạm trưởng" selected="@(ViewBag.CurrentRole != null && ViewBag.CurrentRole.ToString() == "Trạm trưởng")">Trạm trưởng</option>
                        <option value="Kiểm lâm viên" selected="@(ViewBag.CurrentRole != null && ViewBag.CurrentRole.ToString() == "Kiểm lâm viên")">Kiểm lâm viên</option>
                        <option value="Bảo vệ rừng" selected="@(ViewBag.CurrentRole != null && ViewBag.CurrentRole.ToString() == "Bảo vệ rừng")">Bảo vệ rừng</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-success w-100" onclick="openModal()" style="height: 38px;">
                        <i class=""></i> Thêm mới
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="table-responsive d-none d-md-block bg-white shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-success text-white">
                <tr>
                    <th>Họ tên</th>
                    <th>Chức vụ</th>
                    <th>Địa bàn</th>
                    <th>Tài khoản (Quyền)</th>
                    <th class="text-center">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {   
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.HoTen</div>
                                <small class="text-muted">@item.SDT</small>
                            </td>
                            <td><span class="badge bg-primary">@item.ChucVu</span></td>
                            <td>@item.TenXa</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.TenDangNhap))
                                {
                                    <span>@item.TenDangNhap</span>
                                    <span class="text-muted">(@item.Quyen)</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-exclamation-circle"></i> Chưa có TK</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary" onclick="editData(@item.MaNV, event)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteData(@item.MaNV)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center text-muted py-3">Không có dữ liệu</td></tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-md-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="fw-bold text-success mb-0">@item.HoTen</h6>
                        <span class="badge bg-primary">@item.ChucVu</span>
                    </div>
                    <p class="mb-1 small"><i class="bi bi-geo-alt"></i> @item.TenXa</p>
                    <p class="mb-1 small"><i class="bi bi-telephone"></i> @item.SDT</p>
                    <p class="mb-2 small"><i class="bi bi-person"></i> TK: @item.TenDangNhap</p>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary btn-sm flex-fill" onclick="editData(@item.MaNV, event)">Sửa</button>
                        <button class="btn btn-outline-danger btn-sm flex-fill" onclick="deleteData(@item.MaNV)">Xóa</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="nhanSuModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalTitle">Thêm Nhân sự</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="frmNhanSu" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="MaNV" name="MaNV" value="0">
                    
                    <div class="mb-3">
                        <label class="form-label">Họ tên <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="HoTen" id="HoTen" required>
                        <div class="invalid-feedback">Vui lòng nhập họ tên</div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">Chức vụ <span class="text-danger">*</span></label>
                            <select class="form-select" name="ChucVu" id="ChucVu" required>
                                <option value="">-- Chọn --</option>
                                <option value="Kiểm lâm viên">Kiểm lâm viên</option>
                                <option value="Trạm trưởng">Trạm trưởng</option>
                                <option value="Bảo vệ rừng">Bảo vệ rừng</option>
                            </select>
                            <div class="invalid-feedback">Vui lòng chọn chức vụ</div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">SĐT <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="SDT" id="SDT" 
                                   pattern="^(03|05|07|08|09|01[2|6|8|9])+([0-9]{8})$" required>
                            <div class="invalid-feedback">SĐT không hợp lệ (VD: 0912345678)</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa bàn quản lý <span class="text-danger">*</span></label>
                        @Html.DropDownList("MaXa", (SelectList)ViewBag.DsXa, "-- Chọn địa bàn --", 
                            new { @class = "form-select", @id = "MaXa", required = "required" })
                        <div class="invalid-feedback">Vui lòng chọn địa bàn</div>
                    </div>
                    
                    <hr>
                    <h6 class="text-muted">Thông tin tài khoản</h6>
                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="TenDangNhap" id="TenDangNhap" 
                               pattern="^[a-zA-Z0-9_]{5,50}$" required>
                        <div class="invalid-feedback">5-50 ký tự, chỉ chữ, số và gạch dưới</div>
                    </div>
                    <div class="row">
                         <div class="col-6 mb-3">
                            <label class="form-label">Mật khẩu <span class="text-danger" id="passRequired">*</span></label>
                            <input type="password" class="form-control" name="MatKhau" id="MatKhau" 
                                   minlength="6" placeholder="Tối thiểu 6 ký tự">
                            <div class="invalid-feedback">Mật khẩu tối thiểu 6 ký tự</div>
                            <small class="text-muted" id="passNote" style="display:none;">Để trống nếu không đổi</small>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">Quyền <span class="text-danger">*</span></label>
                             <select class="form-select" name="Quyen" id="Quyen" required>
                                <option value="NhanVien_Thon">Nhân viên</option>
                                <option value="QuanLy_Xa">Quản lý</option>
                                <option value="Admin_Tinh">Admin</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success" onclick="saveData()" id="btnSave">
                    <i class="bi bi-save"></i> Lưu dữ liệu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/nhansu.js" asp-append-version="true"></script>
}
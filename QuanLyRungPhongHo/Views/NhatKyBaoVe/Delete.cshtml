@inject IViewLocalizer Localizer
@model QuanLyRungPhongHo.Models.NhatKyBaoVe
@{
    ViewData["Title"] = "Xóa nhật ký";
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4><i class="bi bi-exclamation-triangle"></i> @Localizer["PageTitle"]</h4>
        </div>
        <div class="digioi-card-body">
            <div class="digioi-alert digioi-alert-warning">
                <i class="bi bi-info-circle"></i>
                @Localizer["Warning"]
            </div>

            <div class="digioi-info-grid">
                <div class="digioi-info-card">
                    <div class="digioi-info-card-header"><i class="bi bi-calendar-event"></i> @Localizer["Information"]</div>
                    <div class="digioi-info-card-body">
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["LogCode"]:</div>
                            <div class="digioi-info-value"><span class="digioi-badge digioi-badge-secondary">@Model.MaNK</span></div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["DateRecorded"]:</div>
                            <div class="digioi-info-value">@Model.NgayGhi.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["IncidentType"]:</div>
                            <div class="digioi-info-value">@Model.LoaiSuViec</div>
                        </div>
                    </div>
                </div>

                <div class="digioi-info-card">
                    <div class="digioi-info-card-header"><i class="bi bi-tree"></i> @Localizer["ForestLotInfo"]</div>
                    <div class="digioi-info-card-body">
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["Position"]:</div>
                            <div class="digioi-info-value">
                                @if (Model.LoRung != null)
                                {
                                    <div><strong>@Localizer["SubCompartment"] @Model.LoRung.SoTieuKhu</strong> - @Localizer["Compartment"] @Model.LoRung.SoKhoanh - @Localizer["Lot"] @Model.LoRung.SoLo</div>
                                    <div>@Model.LoRung.DanhMucThon?.TenThon</div>
                                    <div><span class="digioi-badge digioi-badge-success">@Model.LoRung.DanhMucThon?.DanhMucXa?.TenXa</span></div>
                                }
                                else
                                {
                                    <span>—</span>
                                }
                            </div>
                        </div>
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["Coordinates"]:</div>
                            <div class="digioi-info-value">@(string.IsNullOrWhiteSpace(Model.ToaDoGPS) ? "—" : Model.ToaDoGPS)</div>
                        </div>
                    </div>
                </div>

                <div class="digioi-info-card">
                    <div class="digioi-info-card-header"><i class="bi bi-person-badge"></i> @Localizer["RecorderInfo"]</div>
                    <div class="digioi-info-card-body">
                        <div class="digioi-info-row">
                            <div class="digioi-info-label">@Localizer["FullName"]:</div>
                            <div class="digioi-info-value">@(Model.NhanSu?.HoTen ?? "—")</div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaNK" />
                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary digioi-btn-lg"><i class="bi bi-x-circle"></i> @Localizer["Cancel"]</a>
                    <button type="submit" class="digioi-btn digioi-btn-danger digioi-btn-lg"><i class="bi bi-trash"></i> @Localizer["ConfirmDelete"]</button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index"><i class="bi bi-arrow-left"></i> @Localizer["BackToList"]</a>
    </div>
</div>

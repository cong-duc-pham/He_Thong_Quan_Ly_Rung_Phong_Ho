@inject IViewLocalizer Localizer
@model QuanLyRungPhongHo.Models.NhatKyBaoVe
@using QuanLyRungPhongHo.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Cập nhật nhật ký";
    var loRungs = ViewBag.LoRungs as List<SelectListItem> ?? new List<SelectListItem>();
    var loaiSuViec = ViewBag.LoaiSuViec as List<string> ?? new List<string>();
    var nguoiGhiNhan = ViewBag.NguoiGhiNhan as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-form-container">
    <div class="digioi-card">
        <div class="digioi-card-header">
            <h4><i class="bi bi-pencil-square"></i> @Localizer["PageTitle"]</h4>
        </div>
        <div class="digioi-card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaNK" />
                <div asp-validation-summary="ModelOnly" class="digioi-alert digioi-alert-danger"></div>

                <div class="digioi-info-box">
                    <i class="bi bi-tag"></i> @Localizer["LogCode"]: <span class="digioi-badge digioi-badge-secondary">@Model.MaNK</span>
                    <span class="ms-3"><i class="bi bi-person-badge"></i> @Localizer["Recorder"]: <strong>@(nguoiGhiNhan ?? "—")</strong></span>
                </div>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="NgayGhi"><i class="bi bi-calendar-event"></i> @Localizer["DateRecorded"]</label>
                            <input asp-for="NgayGhi" type="datetime-local" value="@Model.NgayGhi.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="NgayGhi" class="digioi-text-danger"></span>
                        </div>
                    </div>
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="LoaiSuViec"><i class="bi bi-flag"></i> @Localizer["IncidentType"]</label>
                            <select asp-for="LoaiSuViec">
                                <option value="">-- @Localizer["SelectType"] --</option>
                                @foreach (var l in loaiSuViec)
                                {
                                    <option value="@l" selected="@(Model.LoaiSuViec == l)">@l</option>
                                }
                            </select>
                            <span asp-validation-for="LoaiSuViec" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="digioi-form-row">
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="MaLo"><i class="bi bi-tree"></i> @Localizer["ForestLot"]</label>
                            <select asp-for="MaLo">
                                <option value="">-- @Localizer["SelectForestLot"] --</option>
                                @foreach (var lo in loRungs)
                                {
                                    <option value="@lo.Value" selected="@(Model.MaLo.HasValue && Model.MaLo.Value.ToString() == lo.Value)">@lo.Text</option>
                                }
                            </select>
                            <span asp-validation-for="MaLo" class="digioi-text-danger"></span>
                        </div>
                    </div>
                    <div class="digioi-form-col">
                        <div class="digioi-form-group">
                            <label asp-for="ToaDoGPS"><i class="bi bi-geo-alt"></i> @Localizer["GPSCoordinates"]</label>
                            <div class="d-flex gap-2">
                                <input asp-for="ToaDoGPS" placeholder="Lat,Lng" />
                                <button type="button" class="digioi-btn digioi-btn-outline" id="btnGetGps"><i class="bi bi-crosshair"></i></button>
                            </div>
                            <span asp-validation-for="ToaDoGPS" class="digioi-text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="digioi-form-group">
                    <label asp-for="NoiDung"><i class="bi bi-journal-text"></i> @Localizer["Content"]</label>
                    <textarea asp-for="NoiDung" rows="4"></textarea>
                    <span asp-validation-for="NoiDung" class="digioi-text-danger"></span>
                </div>

                <div class="digioi-form-actions">
                    <a asp-action="Index" class="digioi-btn digioi-btn-secondary digioi-btn-lg"><i class="bi bi-x-circle"></i> @Localizer["Cancel"]</a>
                    <button type="submit" class="digioi-btn digioi-btn-warning digioi-btn-lg"><i class="bi bi-check-circle"></i> @Localizer["Update"]</button>
                </div>
            </form>
        </div>
    </div>

    <div class="digioi-back-link">
        <a asp-action="Index"><i class="bi bi-arrow-left"></i> @Localizer["BackToList"]</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/nhatkybaove.js" asp-append-version="true"></script>
}

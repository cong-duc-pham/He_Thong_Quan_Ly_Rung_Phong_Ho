@model QuanLyRungPhongHo.Models.DanhMucXa
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/digioi.css" asp-append-version="true" />
}

<div class="digioi-page">
    <div class="digioi-form-center">

        <div class="digioi-card">
            <div class="digioi-header warning">
                <h4>
                    <i class="bi bi-pencil-square"></i> @Localizer["PageHeader"]
                </h4>
            </div>

            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Mã xã -->
                    <div class="mb-3">
                        <label asp-for="MaXa" class="form-label">
                            <i class="bi bi-tag"></i> @Localizer["MaXa"]
                        </label>
                        <input asp-for="MaXa"
                               class="form-control"
                               readonly />
                        <div class="form-text">@Localizer["MaXaReadOnly"]</div>
                    </div>

                    <!-- Tên xã -->
                    <div class="mb-4">
                        <label asp-for="TenXa" class="form-label">
                            <i class="bi bi-building"></i> @Localizer["TenXa"]
                            <span class="text-danger">@Localizer["Required"]</span>
                        </label>
                        <input asp-for="TenXa"
                               class="form-control"
                               placeholder="@Localizer["TenXaPlaceholder"]"
                               maxlength="100" />
                        <span asp-validation-for="TenXa" class="text-danger"></span>
                    </div>

                    <!-- Nút -->
                    <div class="form-actions">
                        <a asp-action="Index" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> @Localizer["Update"]
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="back-link">
            <a asp-action="Index">
                <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

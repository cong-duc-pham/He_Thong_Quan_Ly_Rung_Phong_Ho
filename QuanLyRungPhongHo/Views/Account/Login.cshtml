@model QuanLyRungPhongHo.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Quản Lý Rừng Phòng Hộ</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <div class="logo-section">
                <div class="tree-icon">
                    <img class="IMG_LOGIN" src="~/images/LogoTree_XoaPhong-removebg-preview.png" alt="Logo">
                </div>
                <h1>Quản Lý Rừng Phòng Hộ</h1>
                <p>Hệ thống quản lý và bảo vệ tài nguyên rừng phòng hộ một cách hiệu quả và bền vững</p>
            </div>
        </div>

        <div class="login-right">
            <div class="login-header">
                <h2>Đăng Nhập</h2>
                <p>Vui lòng nhập thông tin để truy cập hệ thống</p>
            </div>

            <form asp-action="Login" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="loginForm" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TenDangNhap">Tên đăng nhập</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input asp-for="TenDangNhap"
                               id="username"
                               class="form-control"
                               placeholder="Nhập tên đăng nhập"
                               autocomplete="username" />
                    </div>
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatKhau">Mật khẩu</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input asp-for="MatKhau"
                               id="password"
                               class="form-control"
                               placeholder="Nhập mật khẩu"
                               autocomplete="current-password" />
                        <i class="fas fa-eye-slash toggle-password" id="togglePassword"></i>
                    </div>
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input asp-for="RememberMe" id="rememberMe" />
                        <span>Ghi nhớ đăng nhập</span>
                    </label>
                    <a href="@Url.Action("ForgotPassword", "Account")" class="forgot-password">Quên mật khẩu?</a>
                </div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert-message show error">
                        @ViewBag.ErrorMessage
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert-message show success">
                        @ViewBag.SuccessMessage
                    </div>
                }

                <button type="submit" class="login-btn">
                    <span>Đăng Nhập</span>
                    <i class="fas fa-arrow-right"></i>
                </button>

                <div class="alert-message" id="alertMessage"></div>
            </form>

            <div class="login-footer">
                <p>Bạn chưa có tài khoản? <a href="#">Liên hệ quản trị viên</a></p>
            </div>
        </div>
    </div>

    <script src="~/js/Login.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>